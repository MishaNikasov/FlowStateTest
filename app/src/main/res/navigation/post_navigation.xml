<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post_navigation"
    app:startDestination="@id/postListFragment">

    <fragment
        android:id="@+id/postListFragment"
        tools:layout="@layout/fragment_post_list"
        android:name="com.lampa.flowstatetest.ui.fragment.post.PostListFragment"
        android:label="Post list fragment" >
        <action
            android:id="@+id/action_postListFragment_to_postFragment"
            app:destination="@id/postFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_post"
        android:id="@+id/postFragment"
        android:name="com.lampa.flowstatetest.ui.fragment.post.PostFragment"
        android:label="PostFragment" />
</navigation>